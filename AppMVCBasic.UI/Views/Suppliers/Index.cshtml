@model IEnumerable<AppMVCBasic.UI.Models.SupplierViewModel>
@using AppMVCBasic.UI.Extensions

@{
    ViewData["Title"] = "Supplier List";
}

<h1>@ViewData["Title"]</h1>
<vc:summary></vc:summary>
<p>
    <a asp-action="Create" class="btn btn-primary">New Supplier</a>
</p>
<table class="table table-hover">
    <thead class="text-light bg-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @this.FormatBrazilianDocument(item.SupplierType, item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td class="align-content-end">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-search"></i></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i></a>                
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
