@model IEnumerable<AppMVCBasic.UI.Models.ProductViewModel>

<table class="table table-hover">
    <thead class="bg-dark text-light">
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Image" alt="@item.Image" style="width:70px;height:100px;">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.Name)
                </td>
                <td>
                    @item.Value.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-search"></i></a>
                    <a supress-by-claim-name="Product" supress-by-claim-value="Edit" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                    <a supress-by-claim-name="Product" supress-by-claim-value="Delete" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>