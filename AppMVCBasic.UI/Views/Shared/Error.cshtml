@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}



@{
    if (Model == null)
    {
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request. Our team is looking to fix it.</h2>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}